<MainAppScreen>:
    id : sud
    NavigationLayout:
        id: nav_layout
        MDNavigationDrawer:
            id : nav_drawer
            drawer_logo: './assets/robin-944887_1280.jpg'
            NavigationDrawerIconButton:
                icon: 'book'
                text: "ADD A SUBJECT"
                on_release:screen_manager.current = "create_subject"
            NavigationDrawerIconButton:
                icon: 'book'
                text: "ADD A QUESTION"
                on_release:screen_manager.current = "create_question"
            NavigationDrawerIconButton:
                icon: 'book'
                text: "View Question"
                on_release:screen_manager.current = "view_question"
        BoxLayout:
            orientation : "vertical"
            NavigationDrawerToolbar:
                title:"ISCHOLARS QUIZ COMPETITION"

                left_action_items: [['home', lambda x: nav_layout.toggle_nav_drawer()]]
                right_action_items: [['settings', lambda x: app.open_settings()]]
            MySceens:
                id: screen_manager
                CreateSubject:
                    id : create_subject
                    name : 'create_subject'
                CreateQuestion:
                    id : create_question
                    name : 'create_question'
                ViewQuestion:
                    id : view_question
                    name : 'view_question'